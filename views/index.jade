extends layout

block content
  section#app.container
    
    div#sendMessage.send-message
      h3 Send a message
      input.input-block-level(type='text', placeholder='phone number', name='phoneNumber')
      textarea.input-block-level(name='message', placeholder='message')
      button.btn.btn-primary(type='submit') Send

    div
      h1.lead Conversations
      hr
      ul#conversations
       
block bootstrapData
  script(type='text/javascript')
    var bootstrapData = {
      conversations:!{JSON.stringify(conversations)}
    };



          


